<Window x:Class="PL.WindowDrones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="WindowDrones" Height="640" Width="800">
    <Grid>
        <Grid Name="MainGrid" HorizontalAlignment="Right" Width="901" Margin="0,0,-101,-67">
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="400*"/>
            </Grid.RowDefinitions>
            <Grid/>
            <Grid Name="UpGrid" Height="auto" Grid.Row="0" Width="auto" Grid.RowSpan="2" Margin="0,0,0,588">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions >
                <ComboBox x:Name="StatusSelector"  SelectionChanged="StatusSelector_SelectionChanged" Grid.Column="1" HorizontalAlignment="Left" Margin="62,30,0,0" VerticalAlignment="Top" Height="33" Width="114" />
                <Label Name="Status" Content="Sort by status:" Grid.Column="0" HorizontalAlignment="Left" Margin="180,35,0,0" VerticalAlignment="Top" Height="51" Width="102" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="WeightSelector" Grid.Column="2" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Width="126" Height="33" SelectionChanged="WeightSelector_SelectionChanged"/>
                <Button Name="Add" Content="Add new drone" Grid.Column="3" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Height="30" Width="97" Click="Add_Click"/>
                <Label Content="Sort by weight:" Grid.Column="1" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            </Grid>
            <ListView Grid.Row="1" x:Name="DronesListView" SelectionChanged="DronesListView_SelectionChanged" Margin="18,26,122,168" MouseDoubleClick="DronesListView_MouseDoubleClick_1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
